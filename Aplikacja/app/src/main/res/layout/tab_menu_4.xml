<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/temp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Galeria Dominikanska"
                    android:id="@+id/show_galeria_but"
                    android:background="@drawable/img_dominikanska_button"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Renoma"
                    android:id="@+id/show_renoma_but"
                    android:background="@drawable/img_dominikanska_button"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="arkady"
                    android:id="@+id/show_arkady_but"
                    android:background="@drawable/img_dominikanska_button"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="SkyTower"
                    android:id="@+id/show_skyTower_but"
                    android:background="@drawable/img_dominikanska_button"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Magnolia Park"
                    android:id="@+id/show_magnolia_but"
                    android:background="@drawable/img_dominikanska_button"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />




            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>