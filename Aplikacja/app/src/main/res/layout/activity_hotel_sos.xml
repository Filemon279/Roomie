<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu.Hotel_sos"
    android:id="@+id/Hotel_sos"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                >

                <ImageView
                    android:id="@+id/background_sos"
                    android:scaleType="centerCrop"

                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <ImageView

                    android:id="@+id/dark"
                    android:alpha="0.5"
                    android:scaleType="centerCrop"
                    android:src="#000000"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="0dp"
                        android:foregroundGravity="center"
                        android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="6">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Hotel Mofinet"
                                android:id="@+id/textView9"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="#30ffffff" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="ul. Innowacyjna 7, 45-500"
                                android:id="@+id/textView10"
                                android:textColor="#ffffff"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="0dp"
                                android:gravity="center"
                                android:background="#30ffffff" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="tel. 600-700-800"
                                android:id="@+id/textView11"
                                android:textColor="#ffffff"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="0dp"
                                android:gravity="center"
                                android:background="#30ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Poproś Hotel o połączenie"
                                android:id="@+id/button_call_help"
                                android:background="@drawable/button_call_click"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Pokaż drogę do Hotelu"
                                android:id="@+id/button_show_route"
                                android:background="@drawable/button_find_click"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Telefon alarmowy: 112"
                                android:id="@+id/textView13"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="#30ffffff" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
